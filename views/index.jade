extends layout

block content
	nav.navbar.navbar-default(role="navigation")
		div.navbar-header
			a.navbar-brand(href="#") Pingamus
		div.collapse.navbar-collapse
			p.navbar-text 
				a#reload(href="#") reload
			p.navbar-text 
				a#test(href="#") test
			p.navbar-text#username #{username}
			p.navbar-text#follower #{follower}
			p.navbar-text
				a(href="/logout") Logout

	div.main
		div.canvas
			canvas#cvp
		ul(id="messages")


	div.footer
		form(action="")
			input(id="cmd" autocomplete="off" autofocus float="left")
			button Send

	script(src="/javascripts/Picture.js")
	script(src="/javascripts/ClientBuffer.js")
	script(src="/javascripts/Canvas.js")
	script(src="/javascripts/simplify.js")
	script(src="/javascripts/scripts.js")
